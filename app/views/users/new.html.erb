<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->

    <!-- Icon -->
    <div class="fadeIn first">
      <img src="https://envoy.com/images/icons/pin.svg" id="icon" alt="User Icon" />
      <h1>Company Finder</h1>
    </div>
    <div class="login">
      <h1>Sign up</h1>
      <%= form_for(@user) do |f| %>
        <%= f.email_field :email, :placeholder => "Email" %>
        <%= f.password_field :password, :placeholder => "Password" %>
        <%= f.submit "Create an account", class: "btn-submit" %>
      <% end %>
    </div>
  </div>

</div>